{
  "name": "overcome-gravity-api",
  "version": "0.0.1",
  "description": "Backend api for the Overcome Gravity app.",
  "author": "Michael Penrod",
  "license": "MIT",
  "scripts": {
    "postinstall": "tsc",
    "start": "node dist/main.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "nodemon": "nodemon",
    "tsc": "tsc --watch",
    "tslint": "npm run tslint:src && npm run tslint:test",
    "tslint:src": "tslint src/**/*.ts",
    "tslint:test": "tslint test/**/*.ts"
  },
  "dependencies": {
    "@nestjs/common": "^5.3.6",
    "@nestjs/core": "^5.3.6",
    "@nestjs/mongoose": "^5.2.2",
    "body-parser": "^1.18.3",
    "fastify-formbody": "^2.0.0",
    "joi": "^14.0.2",
    "mongoose": "^5.3.8",
    "morgan": "^1.9.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.3.1",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/joi": "^14.0.0",
    "@types/mongoose": "^5.2.22",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "dotenv": "^6.1.0",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".(spec|test).ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
